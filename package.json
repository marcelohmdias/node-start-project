{
  "name": "node-start-project",
  "version": "0.1.0",
  "description": "A Node Boilerplate for start projects.",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Marcelo H M Dias",
    "url": "https://github.com/marcelohmdias",
    "email": "marcelohmdias@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcelohmdias/node-start-project.git"
  },
  "bugs": {
    "url": "https://github.com/marcelohmdias/node-start-project/issues"
  },
  "homepage": "https://github.com/marcelohmdias/node-start-project#readme",
  "keywords": [
    "Awilix",
    "Fastify",
    "PM2",
    "Typescript"
  ],
  "scripts": {
    "build": "babel src --out-dir dist --extensions '.ts'",
